<div>
  <h4>new post</h4>
<form action="/api/posts/create" method="post" enctype="multipart/form-data">
  <div>
    <h4>new post</h4>
    <div class="row">
      <div class="input-field col s6">
        <input placeholder="post_title" id="post_title" type="text" class="validate" name="post_title">
        <label for="post_title">Post Title</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s6">
        <input id="post_body" type="text" class="validate" name="post_body">
        <label for="post_body">Body</label>
      </div>
    </div>
  </div>

  <div class="file-field input-field">
    <div class="btn">
      <span>File</span>
      <input type="file" name="post_image">
    </div>
    <div class="file-path-wrapper">
      <input class="file-path validate" type="text">
    </div>
  </div>
  <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
</form>

  {{#each posts as |post|}}

  <div class="row clickable-div" onclick="location.href='/posts/{{post.post_id}}'">
    <div class="col s12 m7">
      <div class="card">
         <span class="card-title">{{post.post_title}}</span>
         <p>{{post.user.user_name}}</p>
         <p>{{ format_time post.post_date}}</p>
        <div class="card-image">
          <img src="/images/uploads/{{post.post_image}}">
        </div>
        <div class="card-content">
         
          <p>{{post.post_body}}</p>
        </div>
        <div class="card-action">
          <a href="/posts/{{post.post_id}}">View Post & Replys</a>
        </div>
      </div>
    </div>
  </div>

  {{/each}}
</div>

<div id="modal" class="modal">
  <div class="modal-content">
    <h4>Post Created</h4>
    <p>Your post has been successfully created!</p>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
  </div>
</div>


<script src="./js/post.js"></script>
<div class="row">
  <div class='col s12 m8'>
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class='card-title' id='spanPost'>{{post.post_title}}</span>
        <div class="card-image"><img src="/images/uploads/{{post.post_image}}"></div>
        <p id='postText'>{{post.post_body}}</p>
        {{#if logged_in}}
        <form class='col s12 reply'>
          <div class='row'>
            <div class='input-field col s12'>
              <textarea id='reply' class='materialize-textarea PostTextarea'></textarea>
                <label for='textarea1'>Reply</label>
                <button class='btn waves-effect waves-light postSubBtn' type='submit' name='action'>Submit</button>
            </div>
          </div>
        </form>
        {{else}}
        <p>You must to logged in to post a reply</p>
        {{/if}}
      </div>
    </div>
  </div>
</div>

{{#each replys as |reply|}}
<p>{{reply.reply_body}}</p>

{{/each}}



<script src='/js/reply.js'></script>